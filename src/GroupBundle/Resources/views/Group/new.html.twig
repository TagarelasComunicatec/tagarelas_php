
{% extends  '::base.html.twig' %} 
{% block title %}
Tagarelas - Criar Grupo
{% endblock %}
{% block content %}
		<section id="conteudo-principal">
			<div class="container" id="pageGroup">
            	<div id="conteudo-cabecalho">
                	<div id="conteudo-titulo">
                        <h1>
                            <small>
								<i class="material-icons md-48">&#xE7FB;</i> Criar Grupo
					 		</small>
                        </h1>
                    </div> <!-- conteudo-titulo !-->
                </div> <!-- conteudo-cabecalho !--> 
				<form class="row" id='newGroup'>
					<div class="col-xs-12 col-sm-6"> 
						<div class="form-group" >
							  <input type="text" id= "groupName" style='width:90% !important'  placeholder= "Nome do grupo"/>
 						      <!-- Mostra se o nome já existe ou não -->
 						      <span id="imgGroupName" 
 						      style='width:10% !important; valign: left !important; align: left; !important'></span>
						</div>
						
						<div class="form-group">
							<label>Foto</label>
							<br>
							<div class="text-center">
 									<!--  image Upload Start -->
 
                                     <div class="imageupload panel panel-default">
                                        <div class="panel-heading clearfix">
                                            <h3 class="panel-title pull-left">Carregar Imagem</h3>
                                        </div>
                                        <div class="file-tab panel-body">
                                            <label class="btn btn-default btn-file">
                                                <span>Browse</span>
                                                <!-- The file is stored here. -->
                                                <input type="file" id='imgGroup' name="image-file">
                                            </label>
                                            <button type="button" class="btn btn-default">Remove</button>
                                        </div>
                                    </div>
 
 									<!--  image upload End -->
 							</div>
					     </div>
					</div>
					<div class="col-xs-12 col-sm-6"> 
						<div class="form-group"  >
							 <input class="magicsearch"   style='width:100% !important'   
							 		   id="allMembers" placeholder="Adicionar / Procurar membros...">
						</div>
						<div class="pull-right">
								<span id="totalDeMembros">0</span> <span id="mensagem-total-de-membros"> Membro(s) adicionado(s)</span>
							</div>
						<div class="previa-membros-adicionados col-xs-12">
							<ul>
							</ul>
						</div>
					</div>
					<div class="col-xs-12 form-group">
						<button type="button" id="insertNewGroup" class="clearfix btn btn-success">Salvar</button>
					</div>
				   </div>
				</form>
			</div>
		</section>
{% endblock %}