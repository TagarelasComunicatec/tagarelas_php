
{% extends  '::base.html.twig' %} 
{% block title %}
Tagarelas - Minhas Sessões
{% endblock %}
{% block content %}
		<section id="conteudo-principal">
			<div class="container" id="pageNeedsAllUsers">
            	<div id="conteudo-cabecalho">
                	<div id="conteudo-titulo">
                        <h1>
                            <small>
								<i class="material-icons md-48">&#xE0B7;</i> Criar Sessão
					 		</small>
                        </h1>
                    </div> <!-- conteudo-titulo !-->
                </div> <!-- conteudo-cabecalho !--> 
				<form class="row">
				
			        <input type='hidden' id='checkSessionNamePath'       value='{{ path("session_checkSessionName") }}' />
			        <input type='hidden' id="loadAllUsersPath"           value="{{path('profile_loadallusers')}}">
					<input type='hidden' id='totalDeMembrosHidden'       value=0 />
					<input type='hidden' id='totalMembrosGruposHidden'   value=0 />
					
			        
					<div class="col-xs-12 col-sm-6"> 
						<div class="form-group">
							<label>Nome da Sessão</label>
							<input type="text" id="sessionName"  style='width:90% !important' >
				    		<span id="imgSessionName" 
				    		      style= "width:10% !important; valign: left !important; align: left; !important'></span>
					
						</div>
						
						<div class="form-group">
							<label>Data e Hora</label>
							<input id='datetimeSession'  class="form-control" type="text" data-field="datetime" readonly>
							<div id="dtBox"></div>
						</div>
						
						<div class="form-group">
							<label>Assunto a ser discutido</label>
							<textarea id="description" class="form-control textarea-block-resize"></textarea>
						</div>
						
						<div class="form-group">
							<label>Visibilidade</label>
							<br>
							<label class="radio-inline">
								<input type="radio" id="publicVisibility" name="visibility" value="PUBLICO"> Público
							</label>
							<label class="radio-inline">
								<input type="radio" id='privateVisibility' name="visibility" value="PRIVADO"> Privado
							</label>
						</div>
								
						<div class="form-group">
							<label>Convidar Grupos</label>
							<input class="magicsearch"   style='width:100% !important'   
							 		   id="sessionGroups" placeholder="Adicionar / Procurar grupos...">
						</div>
				
					</div>
					
					<div class="col-xs-12 col-sm-6"> 
						<div class="form-group">
							<label for="pesquisarContatos">Convidar Amigos</label>
							<p>Convide amigos individualmente ou que não fazem parte de algum grupo</p>
							 <input class="magicsearch"   style='width:100% !important'   
							 		   id="allMembers" placeholder="Adicionar / Procurar membros...">
						</div>						</div>
						<div class="previa-membros-adicionados col-xs-12">
							<ul>
							</ul>
						</div>
						<div class="form-group">
							<p><b>Total de Participantes Convidados:<span id='totalParticipantes'>0</span></b></p>
							<p>
								Todos os membros do(s) grupo(s):    <span id='totalMembrosGrupos'>0</span>
								<br>
								Amigo(s) convidado(s):              <span id="totalDeMembros">0</span>
							</p>
						</div>
					</div>
					<div class="col-xs-12 form-group">
						<button type="button" id='insertNewSession' class="clearfix btn btn-success">Salvar</button>
					</div>
				</form>
			</div>
		</section>
		
{% endblock %}
